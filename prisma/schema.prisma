// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Season {
  id                    String   @id @default(uuid())
  year                  String   @unique
  drivers_champion      String
  constructors_champion String?
  races                 Race[]
  teams                 Team[]
  drivers               Driver[]
  cars                  Car[]

  @@map("seasons")
}

model Team {
  id                 String   @id @default(uuid())
  constructor_titles Int?
  drivers_titles     Int?
  drivers            Driver[]
  cars               Car[]
  Season             Season?  @relation(fields: [season_year], references: [year])
  season_year        String?

  @@map("teams")
}

model Driver {
  id                 String   @id @default(uuid())
  name               String   @unique
  nationality        String
  birthday           String?
  age                Int?
  world_titles       Int?
  wins               Int?
  podiums            Int?
  dnfs               Int?
  is_competing_in_f1 Boolean
  is_alive           Boolean
  photo              String?
  competed_seasons   String[]
  Season             Season?  @relation(fields: [season_year], references: [year])
  season_year        String?
  Team               Team?    @relation(fields: [team_id], references: [id])
  team_id            String?
  Car                Car?     @relation(fields: [car_id], references: [id])
  car_id             String?

  @@map("drivers")
}

model Car {
  id          String   @id @default(uuid())
  team        String
  name        String   @unique
  photo       String?
  wins        Int?
  podiums     Int?
  dnfs        Int?
  drivers     Driver[]
  Season      Season?  @relation(fields: [season_year], references: [year])
  season_year String?
  Team        Team?    @relation(fields: [team_id], references: [id])
  team_id     String?

  @@map("cars")
}

model Race {
  id                    String  @id @default(uuid())
  name                  String
  race_datetime         String
  quali_datetime        String?
  sprint_datetime       String?
  fp3_datetime          String?
  fp2_datetime          String?
  sprint_quali_datetime String?
  fp1_datetime          String?
  winner                String?
  // fastest_lap  String?
  circuit               String
  race_number           Int
  Season                Season? @relation(fields: [season_year], references: [year])
  season_year           String?

  @@map("races")
}

